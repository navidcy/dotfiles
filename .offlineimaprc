ssl = yes
cert_fingerprint = ae2c89d80632be3ec8a149225199e3cdcc88311f
folderfilter = lambda folder: folder not in ['Kalender','Kontaktpersoner','Slettet post','NFIT-Import-adc-2012-09-11-04:18']

