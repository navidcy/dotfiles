urxvt*cursorColor:      #FF00FF
urxvt*fading:           0
!urxvt*fadeColor:        #000000
urxvt*cursorBlink:      false
urxvt*scrollBar:        false
urxvt*depth:            24
urxvt*internalBorder:   2

URxvt.meta8:            true
URxvt.intensityStyles:  false
URxvt.iso14755: false
