#!/bin/bash
set -e
remotecommand='tmux attach -dt utility'
host=idkfa.ucsd.edu
user=ad
if [ "$1" = "-s" ]; then
    ssh $user@$host -t $remotecommand
elif [ "$1" = "-a" ]; then
    autossh $user@$host
else
    if [ "$1" = "notmux" ]; then
        remotecommand=""
    fi
    mosh $user@$host -- $remotecommand
fi
